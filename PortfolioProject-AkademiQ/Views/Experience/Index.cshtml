@model List<PortfolioProject_AkademiQ.Entities.Experience>
@{
    ViewData["Title"] = "Deneyimlerim";
    Layout = "~/Views/Admin/Index.cshtml";
}

<main class="flex-1 flex flex-col h-full overflow-hidden relative bg-background-dark">
    <div class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-accent-blue/5 rounded-full blur-[150px] pointer-events-none"></div>

    <header class="flex items-center justify-between px-8 py-6 z-10 border-b border-white/5 bg-background-dark/80 backdrop-blur-md">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">İş Deneyimleri</h2>
            <p class="text-text-muted text-sm mt-1">Profesyonel kariyer geçmişinizi ve projelerinizi yönetin.</p>
        </div>
        <a href="/Experience/CreateExperience" class="flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-accent hover:opacity-90 text-white font-bold text-sm transition-all shadow-lg shadow-accent-purple/20 active:scale-95">
            <span class="material-symbols-outlined text-[20px]">add_business</span>
            Yeni Deneyim Ekle
        </a>
    </header>

    <div class="flex-1 overflow-y-auto p-8 pt-6 pb-20 scroll-smooth relative z-0">
        <div class="max-w-5xl mx-auto">

            <div class="space-y-6 relative">

                <div class="absolute left-8 top-8 bottom-8 w-0.5 bg-gradient-to-b from-accent-purple/50 via-accent-blue/30 to-transparent hidden md:block"></div>

                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model.OrderByDescending(x => x.ExperienceId))
                    {
                        <div class="group relative flex flex-col md:flex-row gap-6 bg-card-dark rounded-2xl p-6 border border-white/5 hover:border-accent-blue/30 transition-all duration-300 shadow-lg hover:shadow-accent-blue/5 z-10 ml-0 md:ml-4">

                            <div class="flex md:flex-col items-center md:items-start gap-4 md:w-48 shrink-0">
                                <div class="relative">
                                    <div class="size-16 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center overflow-hidden shrink-0 group-hover:scale-105 transition-transform duration-300 shadow-md">
                                        @if (!string.IsNullOrEmpty(item.IconUrl))
                                        {
                                            <img src="@item.IconUrl" alt="@item.CompanyName Logo" class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://ui-avatars.com/api/?name=@item.CompanyName&background=random';" />
                                        }
                                        else
                                        {
                                            <span class="material-symbols-outlined text-3xl text-gray-500">apartment</span>
                                        }
                                    </div>
                                    <div class="absolute top-1/2 -left-[42px] -translate-y-1/2 w-4 h-4 rounded-full bg-background-dark border-[3px] border-accent-purple hidden md:block group-hover:scale-125 transition-transform shadow-[0_0_10px_rgba(139,92,246,0.5)]"></div>
                                </div>
                                <div class="flex flex-col">
                                    <span class="text-xs font-bold text-accent-blue uppercase tracking-wider bg-accent-blue/10 px-2 py-1 rounded w-fit">
                                        @item.WorkDate
                                    </span>
                                </div>
                            </div>

                            <div class="flex-1 border-l border-white/5 md:border-none pl-4 md:pl-0">
                                <h3 class="text-xl font-bold text-white mb-1 group-hover:text-accent-blue transition-colors">@item.Title</h3>
                                <p class="text-sm font-semibold text-gray-400 mb-3 flex items-center gap-1">
                                    <span class="material-symbols-outlined text-xs">domain</span>
                                    @item.CompanyName
                                </p>
                                <p class="text-sm text-text-muted leading-relaxed line-clamp-3 group-hover:line-clamp-none transition-all duration-500">
                                    @item.Description
                                </p>
                            </div>

                            <div class="flex md:flex-col items-center justify-center md:justify-start gap-2 border-t md:border-t-0 md:border-l border-white/5 pt-4 md:pt-0 md:pl-6">
                                <a href="/Experience/UpdateExperience/@item.ExperienceId" class="size-10 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:text-white hover:bg-accent-blue hover:shadow-[0_0_15px_rgba(59,130,246,0.5)] transition-all" title="Düzenle">
                                    <span class="material-symbols-outlined text-lg">edit</span>
                                </a>
                                <a href="/Experience/DeleteExperience/@item.ExperienceId" class="size-10 rounded-lg bg-white/5 flex items-center justify-center text-gray-400 hover:text-white hover:bg-red-500 hover:shadow-[0_0_15px_rgba(239,68,68,0.5)] transition-all" title="Sil">  <span class="material-symbols-outlined text-lg">delete</span></a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-20 bg-card-dark rounded-2xl border border-white/5 border-dashed">
                        <div class="inline-flex p-4 rounded-full bg-white/5 text-gray-500 mb-4">
                            <span class="material-symbols-outlined text-4xl">work_history</span>
                        </div>
                        <h3 class="text-lg font-bold text-white">Henüz Deneyim Eklenmemiş</h3>
                        <p class="text-text-muted text-sm mt-2">Kariyer geçmişinizi eklemeye başlamak için yukarıdaki butonu kullanın.</p>
                    </div>
                }
            </div>

        </div>
    </div>
</main>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const value = '@TempData["Delete"]';
        if (value) {
            Swal.fire({
                title: value,
                icon: 'success',
                confirmButtonText: 'Tamam',
                background: '#151022',
                color: '#ffffff',
                confirmButtonColor: '#5b2bee'
            });
        }
    });
</script>