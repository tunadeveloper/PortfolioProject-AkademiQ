
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Dev Admin Dashboard</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "accent-blue": "#3b82f6",
                        "accent-purple": "#8b5cf6",
                        "background-dark": "#0f1115","background-darker": "#090a0c","card-dark": "#16181d","card-hover": "#1e2128",
                        "text-light": "#e2e8f0",
                        "text-muted": "#94a3b8",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "0.75rem",
                        "xl": "1rem",
                        "2xl": "1.5rem",
                    },
                    backgroundImage: {
                        'gradient-accent': 'linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%)',
                        'gradient-sidebar': 'linear-gradient(180deg, #0f1115 0%, #16181d 100%)',
                        'gradient-glow': 'radial-gradient(circle at center, rgba(139, 92, 246, 0.15) 0%, rgba(15, 17, 21, 0) 70%)',
                    }
                },
            },
        }
    </script>
    <style>
        .no-scrollbar::-webkit-scrollbar {
                    display: none;
                }
                .no-scrollbar {
                    -ms-overflow-style: none;
                    scrollbar-width: none;
                }
                .sidebar-active {
                    background: rgba(139, 92, 246, 0.1);
                    color: #c4b5fd;
                    font-weight: 600;
                    position: relative;
                }
                .sidebar-active::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    top: 50%;
                    transform: translateY(-50%);
                    height: 20px;
                    width: 3px;
                    background: linear-gradient(to bottom, #8b5cf6, #3b82f6);
                    border-radius: 0 4px 4px 0;
                    box-shadow: 0 0 10px rgba(139, 92, 246, 0.5);
                }
                .glass-panel {
                    background: rgba(22, 24, 29, 0.7);
                    backdrop-filter: blur(12px);
                    border: 1px solid rgba(255, 255, 255, 0.05);
                }
                .stat-card-gradient {
                    background: linear-gradient(145deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
                }
    </style>
</head>
<body class="font-display bg-background-dark text-text-light antialiased selection:bg-accent-purple selection:text-white overflow-hidden">
    <div class="flex h-screen w-full">
        @await Component.InvokeAsync("_AdminLayoutSideBarComponentPartial")
       
       @RenderBody()
    </div>

</body>
</html>