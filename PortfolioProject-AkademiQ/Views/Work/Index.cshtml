@model List<Work>
@{
    ViewData["Title"] = "Projelerim";
    Layout = "~/Views/Admin/Index.cshtml";
}

<main class="flex-1 flex flex-col h-full overflow-hidden relative bg-background-dark">
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-accent-blue/5 rounded-full blur-[120px] pointer-events-none"></div>

    <header class="flex items-center justify-between px-8 py-6 z-10 border-b border-white/5 bg-background-dark/80 backdrop-blur-md">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Projelerim</h2>
            <p class="text-text-muted text-sm mt-1">Tamamlanan işlerinizi ve portfolyo öğelerinizi yönetin.</p>
        </div>
        <a href="/Work/CreateWork/" class="flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-accent hover:opacity-90 text-white font-bold text-sm transition-all shadow-lg shadow-accent-purple/20 active:scale-95">
            <span class="material-symbols-outlined text-[20px]">add_photo_alternate</span>
            Yeni Proje Ekle
        </a>
    </header>

    <div class="flex-1 overflow-y-auto p-8 pt-6 pb-20 scroll-smooth relative z-0">
        <div class="max-w-7xl mx-auto">

            @if (Model != null && Model.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    @foreach (var item in Model.OrderByDescending(x => x.WorkId))
                    {
                        <div class="group flex flex-col bg-card-dark rounded-2xl border border-white/5 overflow-hidden hover:border-accent-purple/50 transition-all duration-300 shadow-lg hover:shadow-accent-purple/10">

                            <div class="relative h-48 w-full overflow-hidden bg-black/40 border-b border-white/5">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="@item.Title" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" onerror="this.onerror=null; this.src='https://placehold.co/600x400/1e2128/FFF?text=No+Image';" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex flex-col items-center justify-center bg-[#1e2128] text-gray-600">
                                        <span class="material-symbols-outlined text-4xl mb-2 opacity-50">image_not_supported</span>
                                        <span class="text-xs font-medium">Görsel Yok</span>
                                    </div>
                                }

                                <div class="absolute top-3 left-3">
                                    <span class="px-2 py-1 rounded bg-black/60 backdrop-blur-sm text-[10px] font-bold text-white border border-white/10">
                                        @(item.SubTitle?.Split(' ')[0] ?? "Proje")
                                    </span>
                                </div>
                            </div>

                            <div class="p-5 flex-1 flex flex-col">
                                <h3 class="text-lg font-bold text-white mb-1 truncate group-hover:text-accent-purple transition-colors">@item.Title</h3>
                                <p class="text-sm text-gray-400 line-clamp-2 mb-4">@item.SubTitle</p>
                                <div class="mt-auto pt-4 border-t border-white/5 flex items-center justify-between">
                                    <div class="flex items-center gap-2">
                                        <a href="/Work/UpdateWork/@item.WorkId" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-accent-blue/10 text-accent-blue hover:bg-accent-blue hover:text-white transition-all text-xs font-medium border border-accent-blue/20">
                                            <span class="material-symbols-outlined text-[16px]">edit</span>
                                            Düzenle
                                        </a>
                                        <a href="/Work/DeleteWork/@item.WorkId" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white transition-all text-xs font-medium border border-red-500/20">
                                            <span class="material-symbols-outlined text-[16px]">delete</span>
                                            Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="flex flex-col items-center justify-center h-96 border-2 border-dashed border-white/5 rounded-3xl bg-white/[0.01]">
                    <div class="size-20 rounded-full bg-white/5 flex items-center justify-center text-gray-600 mb-6">
                        <span class="material-symbols-outlined text-4xl">folder_open</span>
                    </div>
                    <h3 class="text-xl font-bold text-white">Henüz Proje Eklenmemiş</h3>
                    <p class="text-gray-500 mt-2 max-w-sm text-center">Portfolyonuzu oluşturmaya başlamak için yeni bir çalışma ekleyin.</p>
                    <a href="/Work/CreateWork" class="mt-6 px-6 py-2.5 rounded-full bg-white/5 hover:bg-white/10 text-white font-medium transition-all border border-white/5">
                        İlk Projeyi Ekle
                    </a>
                </div>
            }

        </div>
    </div>
</main>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const value = '@TempData["Delete"]';
        if (value) {
            Swal.fire({
                title: value,
                icon: 'success',
                confirmButtonText: 'Tamam',
                background: '#151022',
                color: '#ffffff',
                confirmButtonColor: '#5b2bee'
            });
        }
    });
</script>