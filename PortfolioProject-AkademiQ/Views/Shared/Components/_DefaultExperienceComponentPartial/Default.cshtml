@model List<Experience>

<section id="experience" class="py-12 px-4 sm:px-6 lg:px-8 border-t border-white/5 bg-[#151022]">

    <div class="w-full max-w-4xl text-center mb-16 mx-auto">
        <div class="inline-flex items-center justify-center p-2 mb-4 rounded-full bg-primary/10 border border-primary/20 backdrop-blur-sm">
            <span class="material-symbols-outlined text-primary text-sm mr-2">history_edu</span>
            <span class="text-primary text-xs font-bold tracking-widest uppercase">Kariyer Yolu</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight mb-4 text-white">Deneyimlerim</h2>
    </div>

    <div class="w-full max-w-4xl mx-auto space-y-8">

        @foreach (var item in Model)
        {
            <div class="group flex gap-6 bg-card-dark border border-white/5 p-6 rounded-2xl shadow-lg hover:shadow-glow-strong transition-all duration-300">

                <div class="w-16 h-16 rounded-xl bg-background-dark border border-primary/40 shadow-glow flex items-center justify-center group-hover:scale-105 transition-all duration-300 overflow-hidden">
                    @if (!string.IsNullOrEmpty(item.IconUrl))
                    {
                        <img src="@item.IconUrl" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <span class="material-symbols-outlined text-white text-3xl">work</span>
                    }
                </div>

                <div class="flex-1">
                    <h3 class="text-xl md:text-2xl font-bold text-white mb-1">@item.Title</h3>

                    <div class="flex items-center gap-3 text-sm mb-3">
                        <span class="text-primary/80 font-semibold">@item.CompanyName</span>
                        <span class="text-slate-400">•</span>
                        <span class="text-slate-400">@item.WorkDate</span>
                    </div>

                    <p class="text-slate-400 leading-relaxed text-sm">
                        @item.Description
                    </p>
                </div>

            </div>
        }

    </div>

</section>
