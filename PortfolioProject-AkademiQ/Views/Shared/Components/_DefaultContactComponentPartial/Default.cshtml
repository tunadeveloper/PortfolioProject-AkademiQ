@model Contact

<section id="contact" class="relative py-20 px-4 md:px-10 lg:px-20 bg-background-dark border-t border-white/5">
    <div class="relative max-w-7xl mx-auto w-full grid grid-cols-1 lg:grid-cols-12 gap-12 items-start">

        <div class="lg:col-span-5 flex flex-col gap-8">
            <div>
                <h2 class="text-4xl font-bold text-white mb-4">Birlikte harika bir şeyler üretelim.</h2>
                <p class="text-text-muted">Yeni projelere ve iş birliklerine her zaman açığım.</p>
            </div>

            <div class="flex flex-col gap-4">

                <div class="flex items-center gap-4 p-4 rounded-lg bg-surface-dark border border-white/5">
                    <span class="material-symbols-outlined text-primary">mail</span>
                    <div>
                        <p class="text-sm text-text-muted">E-posta</p>
                        <p class="text-white font-medium">@Model.Email</p>
                    </div>
                </div>

                <div class="flex items-center gap-4 p-4 rounded-lg bg-surface-dark border border-white/5">
                    <span class="material-symbols-outlined text-primary">call</span>
                    <div>
                        <p class="text-sm text-text-muted">Telefon</p>
                        <p class="text-white font-medium">@Model.Phone</p>
                    </div>
                </div>

                <div class="flex items-center gap-4 p-4 rounded-lg bg-surface-dark border border-white/5">
                    <span class="material-symbols-outlined text-primary">location_on</span>
                    <div>
                        <p class="text-sm text-text-muted">Adres</p>
                        <p class="text-white font-medium">@Model.Address</p>
                    </div>
                </div>

                <div class="flex items-center gap-4 p-4 rounded-lg bg-surface-dark border border-white/5">
                    <span class="material-symbols-outlined text-primary">language</span>
                    <div>
                        <p class="text-sm text-text-muted">Web Site</p>
                        <a href="@Model.WebSite" target="_blank" class="text-white font-medium hover:text-primary transition">
                            @Model.WebSite
                        </a>
                    </div>
                </div>

            </div>
        </div>

        @await Component.InvokeAsync("_DefaultSendMessageComponentPartial")

        <div class="lg:col-span-12">
            <div class="flex flex-col gap-2 p-4 rounded-lg bg-surface-dark border border-white/5">
                <p class="text-sm text-text-muted">Konum</p>
                <div class="w-full h-64 rounded-xl overflow-hidden shadow-lg">
                    <iframe src="@Model.MapLocation"
                            class="w-full h-full border-0"
                            loading="lazy"
                            allowfullscreen
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>

    </div>
</section>
