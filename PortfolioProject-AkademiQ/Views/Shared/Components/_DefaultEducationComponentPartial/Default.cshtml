@model List<Education>

<section id="education" class="w-full px-6 py-20 bg-gradient-to-b from-[#151022] to-[#120d1d]">

    <div class="max-w-[960px] mx-auto">

        <div class="flex flex-col gap-4 mb-12">
            <div class="flex items-center gap-2">
                <span class="h-px w-8 bg-primary"></span>
                <span class="text-primary text-sm font-bold tracking-widest uppercase">Akademik Tarih</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-bold text-white tracking-tight">Eğitim Hayatım</h2>
        </div>
        <div class="space-y-8">

            @foreach (var item in Model)
            {
                <div class="group flex gap-6 bg-card-dark border border-white/5 p-6 rounded-2xl shadow-lg hover:shadow-glow-strong transition-all duration-300">

                    <div class="w-16 h-16 rounded-xl bg-background-dark border border-primary/40 shadow-glow flex items-center justify-center group-hover:scale-105 transition-all duration-300">
                        <span class="material-symbols-outlined text-white text-3xl">school</span>
                    </div>

                    <div class="flex-1">
                        <h3 class="text-xl md:text-2xl font-bold text-white mb-1">@item.Title</h3>

                        <div class="flex items-center gap-3 text-sm mb-3">
                            <span class="text-primary/80 font-semibold">@item.Department</span>
                            <span class="text-slate-400">•</span>
                            <span class="text-slate-400">@item.EducationDate</span>
                        </div>

                        @if (!string.IsNullOrEmpty(item?.EducationDate))
                        {
                            <p class="text-slate-400 text-sm leading-relaxed">
                                @item.EducationDate
                            </p>
                        }
                    </div>

                </div>
            }

        </div>

    </div>

</section>
