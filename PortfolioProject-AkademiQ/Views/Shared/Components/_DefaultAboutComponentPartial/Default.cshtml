@model About

<section id="about" class="relative py-16 md:py-24 overflow-hidden border-t border-white/5">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
            <div class="flex justify-center lg:justify-end order-1 lg:order-1">
                <div class="relative group">
                    <div class="absolute inset-0 -m-4 bg-gradient-to-tr from-primary to-secondary rounded-full blur-2xl opacity-40 group-hover:opacity-60 transition-opacity duration-500"></div>
                    <div class="relative w-72 h-72 md:w-96 md:h-96 rounded-full p-2 border border-white/10 bg-[#1a1625] shadow-2xl overflow-hidden">
                        <div class="w-full h-full rounded-full bg-[#2c2348] overflow-hidden">
                            <img src="@Model.ImageUrl"
                                 alt="Profile Image"
                                 class="w-full h-full object-cover transition-transform duration-700 hover:scale-110" />
                        </div>
                    </div>

                    <div class="absolute bottom-4 right-4 md:bottom-8 md:right-8 bg-[#201933] border border-white/10 p-3 rounded-2xl shadow-lg flex items-center gap-3 backdrop-blur-md bg-opacity-90">
                        <div class="bg-primary/20 p-2 rounded-full text-primary">
                            <span class="material-symbols-outlined text-[20px]">verified</span>
                        </div>
                        <div class="pr-2">
                            <p class="text-[10px] text-text-muted uppercase font-bold tracking-wider">Deneyim</p>
                            <p class="text-white font-bold">4+ Yıl</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-8 order-2 lg:order-2">
                <div class="space-y-4">
                    <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-[#201933]/50 px-3 py-1 backdrop-blur-sm">
                        <span class="relative flex h-2 w-2">
                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                        </span>
                        <span class="text-xs font-medium text-white">Çalışmaya Açık</span>
                    </div>
                    <h2 class="text-4xl md:text-5xl font-black text-white leading-tight tracking-tight">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-text-muted">@Model.NameSurname</span>
                    </h2>
                    <h3 class="text-xl md:text-2xl font-medium text-primary">@Model.Title</h3>
                    <p class="text-text-muted text-base md:text-lg leading-relaxed max-w-lg">
                        @Model.Description
                    </p>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="group flex items-center gap-4 p-4 rounded-2xl bg-[#201933]/40 border border-white/5 hover:bg-[#201933] hover:border-primary/50 transition-all duration-300">
                        <div class="flex-shrink-0 size-12 rounded-full bg-[#2c2348] text-text-muted group-hover:bg-primary group-hover:text-white flex items-center justify-center transition-colors">
                            <span class="material-symbols-outlined">call</span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-xs text-[#7e729e] font-medium uppercase tracking-wider">Telefon</span>
                            <span class="text-white font-medium">@Model.Phone</span>
                        </div>
                    </div>
                    <div class="group flex items-center gap-4 p-4 rounded-2xl bg-[#201933]/40 border border-white/5 hover:bg-[#201933] hover:border-primary/50 transition-all duration-300">
                        <div class="flex-shrink-0 size-12 rounded-full bg-[#2c2348] text-text-muted group-hover:bg-primary group-hover:text-white flex items-center justify-center transition-colors">
                            <span class="material-symbols-outlined">mail</span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-xs text-[#7e729e] font-medium uppercase tracking-wider">E-Posta</span>
                            <span class="text-white font-medium">@Model.Email</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>