@model List<Skill>

<section id="skills" class="py-20 px-4 md:px-12 lg:px-40 bg-background-light/5 dark:bg-[#181023]">
    <div class="max-w-[1000px] w-full mx-auto flex flex-col gap-12">

        <div class="flex flex-col items-center text-center gap-4">
            <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-white">Teknik Yeterlilik</h2>
            <p class="text-gray-400 text-lg max-w-2xl leading-relaxed">
                Modern arayüz geliştirmekten ölçeklenebilir .NET Core mimarilerine kadar uzmanlık alanlarımı özetleyen bir bölüm.
            </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 w-full">
            @foreach (var item in Model)
            {
                double skillVal = (double)(item.SkillValue ?? 0);
                double circumference = 251.2;
                double offset = circumference - ((circumference * skillVal) / 100);
                string strokeDashOffset = offset.ToString(System.Globalization.CultureInfo.InvariantCulture);
                <div class="flex flex-col items-center justify-center p-6 bg-surface-dark rounded-2xl border border-white/5 shadow-sm hover:shadow-glow transition-all duration-300 group">
                    <div class="relative size-32 mb-4">
                        <svg class="size-full" viewbox="0 0 100 100">
                            <circle class="text-[#322249] stroke-current" cx="50" cy="50" fill="transparent" r="40" stroke-width="8"></circle>
                            <circle class="text-primary stroke-current transform -rotate-90 origin-center transition-all duration-1000 ease-out"
                                    cx="50" cy="50"
                                    fill="transparent"
                                    r="40"
                                    stroke-dasharray="251.2"
                                    stroke-dashoffset="@strokeDashOffset"
                                    stroke-linecap="round"
                                    stroke-width="8">
                            </circle>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center flex-col">
                            <span class="material-symbols-outlined text-primary mb-1 text-2xl group-hover:scale-110 transition-transform">code</span>
                            <span class="text-xl font-bold text-white">@(item.SkillValue ?? 0)%</span>
                        </div>
                    </div>
                    <h3 class="text-lg font-bold text-white">@item.SkillTitle</h3>
                </div>
            }
        </div>
    </div>
</section>