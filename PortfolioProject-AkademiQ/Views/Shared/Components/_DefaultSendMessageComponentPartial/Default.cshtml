@model Message
<div class="lg:col-span-7 w-full">
    <div class="bg-surface-dark border border-white/5 rounded-lg p-6 md:p-10 shadow-2xl relative">
        <form class="flex flex-col gap-6" method="post" asp-controller="Message" asp-action="CreateMessage">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <input name="SenderName" class="w-full h-14 bg-background-dark border border-white/10 rounded-lg px-4 text-white placeholder-text-muted/50 focus:border-primary focus:ring-1 focus:ring-primary" placeholder="İsim Soyisim" type="text" required />
                <input name="SenderEmail" class="w-full h-14 bg-background-dark border border-white/10 rounded-lg px-4 text-white placeholder-text-muted/50 focus:border-primary focus:ring-1 focus:ring-primary" placeholder="E-Posta Adresi" type="email" required />
            </div>

            <select required name="Subject" class="w-full h-14 bg-background-dark border border-white/10 rounded-lg px-4 text-white placeholder-text-muted/50 focus:border-primary focus:ring-1 focus:ring-primary">
                <option value="" disabled selected>Konu Seçiniz</option>
                <option value="Proje teklifi">Proje teklifi</option>
                <option value="İşbirliği">İşbirliği</option>
                <option value="Eğitim / Kurumsal eğitim talebi">Eğitim / Kurumsal eğitim talebi</option>
                <option value="Teknik destek / Danışmanlık">Teknik destek / Danışmanlık</option>
                <option value="Diğer">Diğer</option>
            </select>

            <textarea name="MessageText" class="w-full bg-background-dark border border-white/10 rounded-lg p-4 text-white placeholder-text-muted/50 focus:border-primary focus:ring-1 focus:ring-primary resize-none" placeholder="Mesaj..." rows="5" required></textarea>

            <button class="w-full md:w-auto md:self-end h-14 px-8 rounded-lg bg-primary text-white font-bold hover:bg-primary/90 transition-all flex items-center justify-center gap-2">
                Mesajı Gönder <span class="material-symbols-outlined text-[20px]">send</span>
            </button>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const messageSent = '@TempData["MessageSent"]';
        if (messageSent) {
            Swal.fire({
                title: messageSent,
                icon: 'success',
                confirmButtonText: 'Tamam',
                background: '#151022',
                color: '#ffffff', 
                confirmButtonColor: '#5b2bee'
            });
        }
    });
</script>