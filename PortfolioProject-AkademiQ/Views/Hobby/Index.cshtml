@model List<PortfolioProject_AkademiQ.Entities.Hobby>
@{
    ViewData["Title"] = "Hobilerim & İlgi Alanlarım";
    Layout = "~/Views/Admin/Index.cshtml";
}

<main class="flex-1 flex flex-col h-full overflow-hidden relative bg-background-dark">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent-purple/5 rounded-full blur-[150px] pointer-events-none"></div>

    <header class="flex items-center justify-between px-8 py-6 z-10 border-b border-white/5 bg-background-dark/80 backdrop-blur-md">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Hobilerim</h2>
            <p class="text-text-muted text-sm mt-1">Kişisel ilgi alanlarınızı ve aktivitelerinizi yönetin.</p>
        </div>
        <a href="/Hobby/CreateHobby/" class="flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-accent hover:opacity-90 text-white font-bold text-sm transition-all shadow-lg shadow-accent-purple/20 active:scale-95">
            <span class="material-symbols-outlined text-[20px]">add_reaction</span>
            Yeni Hobi Ekle
        </a>
    </header>

    <div class="flex-1 overflow-y-auto p-8 pt-6 pb-20 scroll-smooth relative z-0">
        <div class="max-w-7xl mx-auto">

            @if (Model != null && Model.Any())
            {
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                    @foreach (var item in Model.OrderByDescending(x => x.HobbyId))
                    {
                        <div class="group relative bg-card-dark rounded-2xl border border-white/5 p-5 flex flex-col items-center justify-between gap-4 hover:border-accent-purple/50 transition-all duration-300 shadow-lg hover:shadow-accent-purple/10 hover:-translate-y-1">

                            <div class="flex flex-col items-center gap-3 w-full">
                                <div class="relative size-20 rounded-full border-2 border-white/10 p-1 flex items-center justify-center overflow-hidden group-hover:scale-105 transition-transform duration-300 shadow-inner bg-white/[0.02]">
                                    <div class="size-full rounded-full overflow-hidden">
                                        @if (!string.IsNullOrEmpty(item.IconUrl))
                                        {
                                            <img src="@item.IconUrl" alt="@item.Title" class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://cdn-icons-png.flaticon.com/512/74/74472.png';" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center bg-white/5">
                                                <span class="material-symbols-outlined text-3xl text-gray-500 group-hover:text-accent-purple transition-colors">favorite</span>
                                            </div>
                                        }
                                    </div>

                                    <div class="absolute inset-0 bg-accent-purple/10 blur-md opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
                                </div>

                                <h3 class="text-sm font-bold text-gray-200 group-hover:text-white text-center truncate w-full px-1 transition-colors">
                                    @item.Title
                                </h3>
                            </div>

                            <div class="w-full pt-3 border-t border-white/5 flex items-center justify-center gap-2">
                                <a href="/Hobby/UpdateHobby/@item.HobbyId" class="flex-1 flex items-center justify-center gap-1 py-1.5 rounded-lg bg-accent-blue/10 text-accent-blue hover:bg-accent-blue hover:text-white transition-all text-xs font-medium border border-accent-blue/20">
                                    <span class="material-symbols-outlined text-[14px]">edit</span>
                                </a>
                                <a href="/Hobby/DeleteHobby/@item.HobbyId" class="flex-1 flex items-center justify-center gap-1 py-1.5 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white transition-all text-xs font-medium border border-red-500/20">
                                    <span class="material-symbols-outlined text-[14px]">delete</span>
                                </a>
                            </div>

                        </div>
                    }
                </div>
            }
            else
            {
                <div class="flex flex-col items-center justify-center h-80 border-2 border-dashed border-white/5 rounded-3xl bg-white/[0.01]">
                    <div class="size-16 rounded-full bg-white/5 flex items-center justify-center text-gray-600 mb-4 animate-bounce">
                        <span class="material-symbols-outlined text-3xl">sentiment_content</span>
                    </div>
                    <h3 class="text-lg font-bold text-white">İlgi Alanı Yok</h3>
                    <p class="text-gray-500 text-sm mt-1 mb-6">Henüz bir hobi eklemediniz.</p>
                    <a href="/Hobby/CreateHobby" class="px-6 py-2 rounded-full bg-white/5 hover:bg-white/10 text-white text-sm font-medium transition-all border border-white/5">
                        Hemen Ekle
                    </a>
                </div>
            }

        </div>
    </div>
</main>

<script>
    function deleteHobby(id) {
        if(confirm('Bu hobiyi listenizden kaldırmak istiyor musunuz?')) {
            window.location.href = '/Hobby/Delete/' + id;
        }
    }
</script>